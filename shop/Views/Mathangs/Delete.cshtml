@model shop.Models.Mathang
@using System

@{
    ViewData["Title"] = "Xóa sản phẩm";

    var giaGoc = Model.GiaGoc ?? 0;
    var giaBan = Model.GiaBan ?? 0;
    var giam = giaGoc - giaBan;
    int percent = (giaGoc > 0 && giaBan < giaGoc)
        ? (int)Math.Round(100.0 * giam / giaGoc)
        : 0;

    var imgFile = string.IsNullOrEmpty(Model.HinhAnh)
        ? "no-image.png"
        : Model.HinhAnh;

    var imgPath = Url.Content("~/images/products/" + imgFile);
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    Bạn có chắc chắn muốn <strong>xóa sản phẩm này</strong> không? Thao tác này
                    không thể hoàn tác.
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-trash3 me-1"></i> Xóa sản phẩm</span>
                    <span class="small">Mã SP: @Model.MaMh</span>
                </div>

                <div class="card-body">
                    <div class="row g-3">
                        <!-- Ảnh sản phẩm -->
                        <div class="col-md-4 text-center">
                            <img src="@imgPath"
                                 class="rounded border mb-2"
                                 style="width:160px;height:160px;object-fit:cover"
                                 alt="@Model.Ten" />

                            @if (percent > 0)
                            {
                                <div class="badge bg-danger mt-1">-@percent%</div>
                            }
                        </div>

                        <!-- Thông tin chi tiết -->
                        <div class="col-md-8">
                            <h5 class="fw-semibold mb-1">@Model.Ten</h5>
                            <div class="text-muted small mb-2">
                                Danh mục: @Model.MaDmNavigation?.Ten
                            </div>

                            <div class="mb-2">
                                <span class="fs-5 fw-bold text-danger">
                                    @String.Format("{0:N0} đ", giaBan)
                                </span>
                                @if (giaGoc > giaBan)
                                {
                                    <span class="text-muted text-decoration-line-through ms-2">
                                        @String.Format("{0:N0} đ", giaGoc)
                                    </span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.MoTa))
                            {
                                <p class="small text-muted mb-2">
                                    @Model.MoTa
                                </p>
                            }

                            <div class="small">
                                <span class="me-3">
                                    <strong>Số lượng tồn:</strong> @Model.SoLuong
                                </span>
                                <span class="me-3">
                                    <strong>Lượt xem:</strong> @Model.LuotXem
                                </span>
                                <span>
                                    <strong>Lượt mua:</strong> @Model.LuotMua
                                </span>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between align-items-center">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaMh" />

                        <div class="text-muted small">
                            Sau khi xóa, sản phẩm sẽ không còn hiển thị trong hệ thống.
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Xóa sản phẩm
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
