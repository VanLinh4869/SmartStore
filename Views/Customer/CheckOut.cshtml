@model shop.Models.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán";
    var total = Model.Total;
}

<div class="container my-4">
    <h4 class="mb-3">Thanh toán</h4>

    <form asp-action="ConfirmCheckOut" method="post">
        @Html.AntiForgeryToken()

        <div class="row mt-4">
            <!-- Cột trái: danh sách sản phẩm -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-light d-flex justify-content-between">
                        <strong>Đơn hàng của bạn</strong>
                        <span class="small text-muted">@Model.Items.Count sản phẩm</span>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center" style="width:100px;">SL</th>
                                    <th class="text-end" style="width:140px;">Giá</th>
                                    <th class="text-end" style="width:140px;">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex">
                                                <img src="~/images/products/@item.MatHang.HinhAnh"
                                                     style="width:60px;height:60px;object-fit:cover"
                                                     class="me-2 rounded" />
                                                <div>
                                                    <div class="fw-semibold">@item.MatHang.Ten</div>
                                                    <div class="small text-muted">
                                                        Mã SP: @item.MatHang.MaMh
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.SoLuong</td>
                                        <td class="text-end">
                                            @String.Format("{0:N0} đ", item.MatHang.GiaBan ?? 0)
                                        </td>
                                        <td class="text-end">
                                            @String.Format("{0:N0} đ", item.ThanhTien)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="3" class="text-end">Tổng cộng:</th>
                                    <th class="text-end text-danger fs-5">
                                        @String.Format("{0:N0} đ", total)
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-action="Cart" class="btn btn-outline-secondary btn-sm">
                            &laquo; Quay lại giỏ hàng
                        </a>
                        <button type="submit" class="btn btn-danger">
                            Đặt hàng
                        </button>
                    </div>
                </div>
            </div>

            <!-- Cột phải: thông tin nhận hàng + phương thức thanh toán -->
            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>Thông tin nhận hàng</strong>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ tên</label>
                            <input asp-for="FullName" class="form-control"
                                   placeholder="Tên người nhận" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control"
                                   placeholder="Số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <textarea asp-for="Address" class="form-control" rows="3"
                                      placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-light">
                        <strong>Hình thức thanh toán</strong>
                    </div>
                    <div class="card-body small">
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="Payment" id="cod" checked />
                            <label class="form-check-label" for="cod">
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                        <div class="form-check mb-1">
                            <input class="form-check-input" type="radio" name="Payment" id="bank" />
                            <label class="form-check-label" for="bank">
                                Chuyển khoản ngân hàng
                            </label>
                        </div>
                        <p class="mt-2 text-muted">
                            (Demo nên chưa xử lý thanh toán online, chỉ lưu đơn hàng.)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
