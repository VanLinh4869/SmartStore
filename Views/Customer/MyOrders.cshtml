@model IEnumerable<shop.Models.Hoadon>

@{
    ViewData["Title"] = "Đơn hàng của tôi";

    string Badge(int? s) => s switch
    {
        0 => "badge bg-warning text-dark",
        1 => "badge bg-primary",
        2 => "badge bg-success",
        3 => "badge bg-secondary",
        _ => "badge bg-light text-dark"
    };

    string StatusText(int? s) => s switch
    {
        0 => "Chờ duyệt",
        1 => "Đã duyệt",
        2 => "Đã giao",
        3 => "Đã hủy",
        _ => "Không rõ"
    };
}

<h4 class="fw-bold mb-3">Đơn hàng của tôi</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Bạn chưa có đơn hàng nào.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã HĐ</th>
                        <th>Ngày đặt</th>
                        <th class="text-end">Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hd in Model)
                    {
                        <tr>
                            <td>#@hd.MaHd</td>
                            <td>@(hd.Ngay?.ToString("dd/MM/yyyy HH:mm"))</td>
                            <td class="text-end">@String.Format("{0:N0} đ", hd.TongTien ?? 0)</td>
                            <td>
                                <span class="@Badge(hd.TrangThai)">
                                    @StatusText(hd.TrangThai)
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
