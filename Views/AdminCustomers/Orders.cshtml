@model IEnumerable<shop.Models.Hoadon>
@{
    var kh = (shop.Models.Khachhang)ViewBag.Customer;
    ViewData["Title"] = $"Đơn hàng của {kh.Ten}";
}

<h4 class="fw-bold mb-3">
    Đơn hàng của khách: @kh.Ten (@kh.Email)
</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Khách hàng này chưa có đơn hàng nào.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            Danh sách đơn hàng
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã HD</th>
                        <th>Ngày</th>
                        <th class="text-end">Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var h in Model)
                    {
                        string statusText = h.TrangThai switch
                        {
                            0 => "Chờ duyệt",
                            1 => "Đã duyệt",
                            2 => "Đã giao",
                            3 => "Đã hủy",
                            _ => "Không rõ"
                        };
                        <tr>
                            <td>#@h.MaHd</td>
                            <td>@h.Ngay?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                @String.Format("{0:N0} đ", h.TongTien ?? 0)
                            </td>
                            <td>@statusText</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    ← Quay lại danh sách khách
</a>
