@model shop.Models.Mathang

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    string img = string.IsNullOrEmpty(Model.HinhAnh)
        ? "~/images/products/no-image.png"
        : "~/images/products/" + Model.HinhAnh;
}

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-info-circle me-1"></i> Thông tin sản phẩm</h5>
        <span class="badge bg-secondary">@Model.MaMh</span>
    </div>

    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <img src="@Url.Content(img)" class="img-fluid rounded mb-2"
                     style="max-height:260px;object-fit:contain;" />
                <div class="small text-muted">@Model.HinhAnh</div>
            </div>

            <div class="col-md-8">
                <h5 class="fw-semibold mb-1">@Model.Ten</h5>
                <div class="mb-2">
                    <span class="text-danger fw-bold fs-5">
                        @String.Format("{0:N0} đ", Model.GiaBan ?? 0)
                    </span>
                    @if ((Model.GiaGoc ?? 0) > (Model.GiaBan ?? 0))
                    {
                        <span class="text-muted text-decoration-line-through ms-2">
                            @String.Format("{0:N0} đ", Model.GiaGoc ?? 0)
                        </span>
                    }
                </div>

                <dl class="row mb-0 small">
                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model.MaDmNavigation?.Ten</dd>

                    <dt class="col-sm-4">Số lượng tồn</dt>
                    <dd class="col-sm-8">@Model.SoLuong</dd>

                    <dt class="col-sm-4">Lượt xem</dt>
                    <dd class="col-sm-8">@Model.LuotXem</dd>

                    <dt class="col-sm-4">Lượt mua</dt>
                    <dd class="col-sm-8">@Model.LuotMua</dd>
                </dl>

                <hr />

                <h6 class="fw-semibold">Mô tả</h6>
                <p class="mb-0">
                    @(!string.IsNullOrEmpty(Model.MoTa) ? Model.MoTa : "Chưa có mô tả cho sản phẩm này.")
                </p>
            </div>
        </div>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Danh sách
        </a>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaMh" class="btn btn-warning btn-sm text-white">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Delete" asp-route-id="@Model.MaMh" class="btn btn-danger btn-sm">
                <i class="bi bi-trash3"></i> Xóa
            </a>
        </div>
    </div>
</div>
