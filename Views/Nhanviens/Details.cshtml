@model shop.Models.Nhanvien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-info-circle me-1"></i> Thông tin nhân viên</h5>
        <span class="badge bg-secondary">Mã NV: @Model.MaNv</span>
    </div>

    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <i class="bi bi-person-circle" style="font-size:4rem;"></i>
                <div class="small text-muted mt-2">
                    @Model.MaCvNavigation?.Ten
                </div>
            </div>

            <div class="col-md-8">
                <h5 class="fw-semibold mb-3">@Model.Ten</h5>

                <dl class="row mb-0 small">
                    <dt class="col-sm-4">Chức vụ</dt>
                    <dd class="col-sm-8">@Model.MaCvNavigation?.Ten</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Model.DienThoai</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Danh sách
        </a>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaNv" class="btn btn-warning btn-sm text-white">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Delete" asp-route-id="@Model.MaNv" class="btn btn-danger btn-sm">
                <i class="bi bi-trash3"></i> Xóa
            </a>
        </div>
    </div>
</div>
