@model IEnumerable<shop.Models.Nhanvien>
@using System

@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4 class="fw-bold mb-0">Quản lý nhân viên</h4>
        <div class="text-muted small">
            Tổng số: @Model.Count() nhân viên
        </div>
    </div>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Thêm nhân viên
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <span class="fw-semibold">
            Danh sách nhân viên
        </span>
        <span class="small text-muted">
            Click vào các nút bên phải để xem hồ sơ / sửa / xoá
        </span>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px;">Mã NV</th>
                        <th>Họ tên</th>
                        <th>Chức vụ</th>
                        <th style="width:160px;">Điện thoại</th>
                        <th style="width:220px;">Email</th>
                        <th class="text-end" style="width:180px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Chưa có nhân viên nào. Hãy bấm <strong>Thêm nhân viên</strong> để tạo mới.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var nv in Model)
                        {
                            <tr>
                                <td>@nv.MaNv</td>

                                <td>
                                    <div class="fw-semibold">@nv.Ten</div>
                                </td>

                                <td>
                                    @nv.MaCvNavigation?.Ten
                                </td>

                                <td>
                                    @nv.DienThoai
                                </td>

                                <td>
                                    @nv.Email
                                </td>

                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@nv.MaNv"
                                           class="btn btn-outline-info" title="Hồ sơ">
                                            <i class="bi bi-person-badge"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@nv.MaNv"
                                           class="btn btn-outline-secondary" title="Sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@nv.MaNv"
                                           class="btn btn-outline-danger" title="Xoá">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
